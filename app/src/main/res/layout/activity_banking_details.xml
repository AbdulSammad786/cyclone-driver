<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samad786.cyclonedriver.VehicleDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toplayout"
        android:background="#FF384188"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:drawable/ic_menu_revert"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banking Details"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toplayout"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/b"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFCBDEFB"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name on Card"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:id="@+id/add"
                    android:layout_alignParentLeft="true"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/black"
                    android:layout_toRightOf="@+id/add"
                    android:layout_marginLeft="27dp"
                    android:id="@+id/l1"
                    android:layout_centerVertical="true"
                    ></View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:id="@+id/nameoncard"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@+id/l1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFCBDEFB"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:id="@+id/c"
                    android:layout_alignParentLeft="true"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/black"
                    android:layout_toRightOf="@+id/c"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/l2"
                    android:layout_centerVertical="true"
                    ></View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="00000000000"
                    android:gravity="center"
                    android:id="@+id/accountnumber"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/l2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFCBDEFB"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch Code"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:id="@+id/PostCode"
                    android:layout_alignParentLeft="true"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/black"
                    android:layout_toRightOf="@+id/PostCode"
                    android:layout_marginLeft="42dp"
                    android:id="@+id/l3"
                    android:layout_centerVertical="true"
                    ></View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="00000000000"
                    android:gravity="center"
                    android:id="@+id/branchcode"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/l3"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFCBDEFB"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch Address"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:id="@+id/pr"
                    android:layout_alignParentLeft="true"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/black"
                    android:layout_toRightOf="@+id/pr"
                    android:layout_marginLeft="21dp"
                    android:id="@+id/l4"
                    android:layout_centerVertical="true"
                    ></View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:id="@+id/branchaddress"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@+id/l4"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFCBDEFB"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Holder"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:id="@+id/cn"
                    android:layout_alignParentLeft="true"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@android:color/black"
                    android:layout_toRightOf="@+id/cn"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/l5"
                    android:layout_centerVertical="true"
                    ></View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:id="@+id/accountholder"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@+id/l5"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/b"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/icons"
        android:background="#ffd6d7d7"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Continue"
            android:onClick="con"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="@android:color/white"
            />
    </LinearLayout>
</RelativeLayout>


