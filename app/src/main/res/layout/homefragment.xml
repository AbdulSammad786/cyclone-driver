<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Maps"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/botomlayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:weightSum="1" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="4" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.98"
                android:gravity="center"
                android:id="@+id/donate"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="60dp"
                    android:id="@+id/donateimage"
                    android:background="@drawable/free"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"></ImageButton>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:background="@android:color/white"
                ></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/selllayout"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="60dp"
                    android:id="@+id/sellimage"
                    android:background="@drawable/busy"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.98"></ImageButton>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:background="@android:color/white"
                ></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/searchlayout"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/searchimage"
                    android:layout_width="60dp"
                    android:background="@drawable/offline"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="60dp"
                    android:background="@drawable/queue"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"></ImageButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>